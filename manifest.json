{
    "name": "Shopify Detector",
    "description": "Detects if a website is built with Shopify and displays a notification banner",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "Identifier.html",
        "default_title": "Shopify Detector",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["Identifier.js"],
            "css": ["styles.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
